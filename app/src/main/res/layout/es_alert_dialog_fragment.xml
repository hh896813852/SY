<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_shape_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/disabled2_hint_color"
        android:gravity="center"
        android:paddingTop="24dp"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/font_l"
        android:visibility="gone"
        tools:text="标题"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:background="@color/disabled2_hint_color"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:paddingBottom="22dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:textColor="@color/secondary_font_color"
        android:textSize="@dimen/font_s"
        android:visibility="gone"
        tools:text="确定关闭？"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_message"
        android:layout_marginTop="1dp"
        android:background="@color/disabled0_hint_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_bg"
            android:gravity="center"
            android:minHeight="36dp"
            android:minWidth="64dp"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_xl"
            android:visibility="gone"
            tools:text="关闭"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_bg"
            android:gravity="center"
            android:minHeight="36dp"
            android:minWidth="64dp"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/font_xl"
            android:visibility="gone"
            tools:text="确定"
            tools:visibility="visible" />
    </LinearLayout>


</RelativeLayout>