<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_color"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/previous"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mcv_arrow_margin"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/previous"
            android:padding="@dimen/mcv_arrow_padding"
            android:scaleType="centerInside"
            android:src="@drawable/icon_arrow_left_gray" />

        <TextView
            android:id="@+id/month_name"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            tools:text="August 2018" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mcv_arrow_margin"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/next"
            android:padding="@dimen/mcv_arrow_padding"
            android:scaleType="centerInside"
            android:src="@drawable/icon_arrow_right_gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bg_light_gray0" />
</LinearLayout>