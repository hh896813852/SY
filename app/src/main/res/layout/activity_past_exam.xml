<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.edusoho.yunketang.bean.PayParams" />

        <variable
            name="viewModel"
            type="com.edusoho.yunketang.ui.testlib.PastExamActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_light_gray0"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/layout_title_black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bg_light_gray1" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp"
                        android:drawableTop="@drawable/bg_no_pager"
                        android:drawablePadding="10dp"
                        android:gravity="center_horizontal"
                        android:text="暂时没有试卷"
                        android:textColor="@color/text_light_green"
                        android:textSize="15sp"
                        android:visibility="@{viewModel.hasData ? View.GONE : View.VISIBLE}" />

                    <android.support.v4.widget.SwipeRefreshLayout
                        android:id="@+id/swipeView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        bind:onRefreshListener="@{viewModel.onRefreshListener}">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycleView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:scrollbars="none"
                            bind:adapter="@{viewModel.adapter}"
                            bind:onItemClick="@{viewModel.onItemClick}" />
                    </android.support.v4.widget.SwipeRefreshLayout>
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/bgLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#60000000"
                android:clickable="true"
                android:onClick="onBgClick"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_white_top_corner_8"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="确认订单"
                            android:textColor="@color/text_black"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:clickable="true"
                            android:onClick="onPayTypePickCloseClick"
                            android:src="@drawable/icon_close_black" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{viewModel.examinationName}"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        tools:text="会计初级职称" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@{viewModel.examinationPrice}"
                        android:textColor="@color/theme_color"
                        android:textSize="16sp"
                        tools:text="¥8000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/bg_light_gray0" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:onClick="onPayTypeSelectClick"
                        android:tag="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@drawable/icon_wechat"
                            android:drawablePadding="8dp"
                            android:text="微信"
                            android:textColor="@color/text_black"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="10dp"
                            android:src="@{viewModel.payType == PayParams.PAY_TYPE_WECHAT ? @drawable/icon_picked : @drawable/icon_not_pick}"
                            tools:src="@drawable/icon_not_pick" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/bg_light_gray0" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:onClick="onPayTypeSelectClick"
                        android:tag="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@drawable/icon_alipay"
                            android:drawablePadding="8dp"
                            android:text="支付宝"
                            android:textColor="@color/text_black"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="10dp"
                            android:src="@{viewModel.payType == PayParams.PAY_TYPE_ALIPAY ? @drawable/icon_picked : @drawable/icon_not_pick}"
                            tools:src="@drawable/icon_picked" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/bg_light_gray0" />

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/bg_theme_color_corner_25"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onCommitOrderClick"
                        android:text="提交订单"
                        android:textColor="@color/text_white"
                        android:textSize="15sp" />
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</layout>
