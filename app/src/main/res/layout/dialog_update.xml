<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_white_corner_6"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_update" />

        <TextView
            android:id="@+id/updateVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            tools:text="发现软件新版本  V5.0.1" />

        <TextView
            android:id="@+id/updateContentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:padding="10dp"
            android:textColor="@color/text_dark_gray"
            android:textSize="15sp"
            tools:text="1、123123" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notUpdateView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_gray_bottom_left_corner_6"
                android:gravity="center"
                android:text="以后再说"
                android:textColor="@color/text_white"
                android:textSize="15dp" />

            <FrameLayout
                android:id="@+id/line"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/theme_color">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/alpha_bg_half_white" />
            </FrameLayout>

            <TextView
                android:id="@+id/updateView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_theme_color_bottom_right_corner_6"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="@color/text_white"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
